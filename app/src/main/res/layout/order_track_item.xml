<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/tvIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_track_order_done"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/dotLine"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/dot_line"
        app:layout_constraintTop_toBottomOf="@id/tvIcon"
        app:layout_constraintStart_toStartOf="@id/tvIcon"
        app:layout_constraintEnd_toEndOf="@id/tvIcon"
        />


    <TextView
        android:id="@+id/getOrderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:fontFamily="@font/jostmedium"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tvIcon"
        app:layout_constraintStart_toEndOf="@id/tvIcon"
        app:layout_constraintTop_toTopOf="@id/tvIcon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/getOrderTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/getOrderText"
        app:layout_constraintStart_toStartOf="@id/getOrderText"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:fontFamily="@font/jostregular"
        android:layout_margin="4sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>