<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_black">
    <TextView
        android:id="@+id/categoryName"
        style="@style/textViewBlack16SpBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recommended"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/categoryItemCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryItemCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_14sdp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/categoryName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/categoryName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>