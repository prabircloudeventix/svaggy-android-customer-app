<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/screen_bg">

    <ImageView
        android:id="@+id/order_confirm_gif"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/order_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderConfirmStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jostbold"
        android:text="@string/order_confirmed"
        android:textColor="@color/txt_black"
        android:layout_marginTop="@dimen/_27sdp"
        android:textSize="@dimen/sp30"
        app:layout_constraintBottom_toTopOf="@+id/orderConfirmMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_confirm_gif" />

    <TextView
        android:id="@+id/orderConfirmMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jostregular"
        android:text="@string/your_order_has_been_successfully_placed"
        android:textColor="@color/txt_gray"
        android:layout_marginTop="@dimen/_17sdp"
        android:textSize="@dimen/sp18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderConfirmStatus" />



</androidx.constraintlayout.widget.ConstraintLayout>