<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRecentSearch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/txtSearchName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/bg_round_sub_gray"
        android:drawableStart="@drawable/ic_recent_load"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@color/sub_txt_gray"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="INDONESIA ID" />

</androidx.constraintlayout.widget.ConstraintLayout>